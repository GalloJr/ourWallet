rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Verifica se o usuário é Premium checando o campo no documento do usuário
    function isPremium() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc != null && (userDoc.data.isPremium == true || userDoc.data.isAdmin == true);
    }

    // Helper: Verifica se o usuário atual é o Administrador Master (via campo no banco)
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Regras para a coleção de usuários
    match /users/{userId} {
      // Pode ler se for o dono, se for Admin, ou se for a carteira vinculada (spouse)
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        isAdmin() || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('linkedWalletId', '') == userId)
      );
      
      // Permite criar o próprio documento (Segurança: o app sempre envia isAdmin: false)
      allow create: if request.auth != null && request.auth.uid == userId;

      // Permite atualizar se for admin, ou se for o dono (sem mexer em campos sensíveis)
      allow update: if request.auth != null && (
        isAdmin() || 
        (request.auth.uid == userId && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isPremium', 'isAdmin']))
      );
    }

    // Regras para Transações, Contas e Cartões (Acesso Básico)
    match /transactions/{tId} {
      allow read, write: if request.auth != null && resource.data.uid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    match /accounts/{accId} {
      allow read, write: if request.auth != null && (resource.data.uid == request.auth.uid || isAdmin());
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    match /cards/{cardId} {
      allow read, write: if request.auth != null && (resource.data.uid == request.auth.uid || isAdmin());
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // Regras para Metas e Dívidas (BLOQUEADAS PARA FREE)
    match /goals/{goalId} {
      allow read, write: if request.auth != null && request.auth.uid == (resource == null ? request.resource.data.uid : resource.data.uid) && isPremium();
    }

    match /debts/{debtId} {
      allow read, write: if request.auth != null && request.auth.uid == (resource == null ? request.resource.data.uid : resource.data.uid) && isPremium();
    }

    // Regras para Pedidos Premium (Apenas Admin lê)
    match /premium_requests/{requestId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }
  }
}

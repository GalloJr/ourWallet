rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Verifica se o usuário tem acesso Premium (assinatura, admin ou Trial ativo)
    function isPremium(walletId) {
      let userPath = /databases/$(database)/documents/users/$(walletId);
      if (!exists(userPath)) return false;
      let userDoc = get(userPath);
      return userDoc.data.get('isPremium', false) == true || 
             userDoc.data.get('isAdmin', false) == true || 
             (userDoc.data.get('trialUntil', timestamp.date(0)) > request.time);
    }

    // Helper: Verifica se o usuário é membro da carteira (dono ou vinculado)
    function isWalletMember(walletId) {
      if (request.auth == null) return false;
      if (request.auth.uid == walletId) return true;
      let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(userPath) && get(userPath).data.get('linkedWalletId', '') == walletId;
    }

    // Helper: Verifica se o usuário atual é o Administrador Master
    function isAdmin() {
      if (request.auth == null) return false;
      let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(userPath) && get(userPath).data.get('isAdmin', false) == true;
    }

    // Regras para a coleção de usuários
    match /users/{userId} {
      allow get: if request.auth != null;
      allow list: if isAdmin();
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (
        isAdmin() || 
        (request.auth.uid == userId && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isPremium', 'isAdmin']))
      );
    }

    // Regras para Transações, Contas e Cartões
    match /transactions/{tId} {
      allow read, write: if isWalletMember(resource == null ? request.resource.data.uid : resource.data.uid);
    }

    match /accounts/{accId} {
      allow read, write: if isWalletMember(resource == null ? request.resource.data.uid : resource.data.uid) || isAdmin();
    }

    match /cards/{cardId} {
      allow read, write: if isWalletMember(resource == null ? request.resource.data.uid : resource.data.uid) || isAdmin();
    }

    // Regras para Metas e Dívidas (Requer Premium/Trial na carteira ativa)
    match /goals/{goalId} {
      allow read, write: if let wId = (resource == null ? request.resource.data.uid : resource.data.uid);
                         isWalletMember(wId) && isPremium(wId);
    }

    match /debts/{debtId} {
      allow read, write: if let wId = (resource == null ? request.resource.data.uid : resource.data.uid);
                         isWalletMember(wId) && isPremium(wId);
    }

    // Regras para Pedidos Premium
    match /premium_requests/{requestId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }
  }
}
